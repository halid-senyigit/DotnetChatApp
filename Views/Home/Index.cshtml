@model IEnumerable<DotnetChatApp.Database.Message>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Chat App with SignalR</h1>
</div>
<div class="container">
    <div class="row">
        <ul class="" id="messagesList">
            @if(Model != null)
            @foreach (var item in Model)
            {
                <li><span class="label label-primary">@item.User.Username : </span> @item.Content</li>
            }
        </ul>
    </div>

    <div class="row">
        <div class="form-group m-2">
            <label>User Name</label>
            <input class="form-control" id="userInput" />
        </div>

        <div class="form-group m-2">
            <label>Message</label>
            <input class="form-control" id="messageInput" />
        </div>

        <div class="form-group m-2">
            <label>&nbsp;</label>
            <button class="form-control btn btn-success" id=sendButton>Send</button>
        </div>

    </div>

</div>
                


@section Styles{
    <link rel="stylesheet" href="~/css/chat.css">
}

@section Scripts{
    <script src="~/lib/aspnet-signalr/signalr.min.js"></script>
    <script src="~/js/chat.js"></script>
}
